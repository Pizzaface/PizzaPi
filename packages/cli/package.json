{
  "name": "@pizzapi/cli",
  "version": "0.1.28",
  "type": "module",
  "bin": {
    "pizza": "src/index.ts",
    "pizzapi": "src/index.ts"
  },
  "scripts": {
    "dev": "bun src/index.ts",
    "dev:runner": "bun src/index.ts runner",
    "build": "tsc",
    "start": "bun dist/index.js",
    "build:binary": "bun build-binaries.ts --target",
    "build:binary:linux-x64": "bun build-binaries.ts --target linux-x64",
    "build:binary:linux-arm64": "bun build-binaries.ts --target linux-arm64",
    "build:binary:macos-x64": "bun build-binaries.ts --target macos-x64",
    "build:binary:macos-arm64": "bun build-binaries.ts --target macos-arm64",
    "build:binary:windows-x64": "bun build-binaries.ts --target windows-x64",
    "build:binaries": "bun build-binaries.ts"
  },
  "dependencies": {
    "@mariozechner/pi-coding-agent": "^0.53.0",
    "@pizzapi/tools": "workspace:*",
    "@zenyr/bun-pty": "^0.4.4",
    "socket.io-client": "^4.8.1",
    "@pizzapi/protocol": "workspace:*"
  },
  "devDependencies": {
    "@types/bun": "^1.3.9",
    "typescript": "^5.7.0"
  }
}
